<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusinessOrdersActivity"
    android:background="@drawable/wallet_back"
    android:fitsSystemWindows="true"
    tools:openDrawer="end"
    android:id="@+id/drawer_menu_business">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header"
        app:menu="@menu/open_menu_businees"
        android:layout_gravity="start" />

    <RelativeLayout
        android:id="@+id/topPage"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="339dp"
            app:navigationIcon="@drawable/humburger_icon">

        </androidx.appcompat.widget.Toolbar>


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="79dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="61dp"
            android:fontFamily="@font/comfortaa"
            android:letterSpacing="0.25"
            android:text="@string/orders"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/my_orders_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="77dp"
            android:background="@color/empty"
            android:text="@string/my_orders" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/clients_orders_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="52dp"
            android:layout_toStartOf="@+id/my_orders_btn"
            android:background="@color/empty"
            android:text="Clients Orders" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/middlePage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="200dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp">

        <View
            android:id="@+id/rectangle_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="-20dp"
            android:background="@drawable/rec_items_design" />

        <RelativeLayout
            android:id="@+id/PanddingRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="179dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="49dp"
                android:layout_marginEnd="0dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/RVPanddingRecycle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </ScrollView>

            <TextView
                android:id="@+id/TvPennding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="30dp"
                android:background="@color/newGery"
                android:text="pending" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/CancleRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PanddingRecycler"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp">


            <TextView
                android:id="@+id/TvCancle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="30dp"
                android:background="@color/newGery"
                android:text="@string/decline" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="0dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/RVCancleRecycle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </ScrollView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ApproveRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CancleRecycler"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp">


            <TextView
                android:id="@+id/TvApprove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="30dp"
                android:background="@color/newGery"
                android:text="@string/approve" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="0dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/RVApproveRecycle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </ScrollView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/CompleteRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ApproveRecycler"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp">


            <TextView
                android:id="@+id/TvComplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="30dp"
                android:background="@color/newGery"
                android:text="Complete" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="0dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/RVCompleteRecycle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </ScrollView>
        </RelativeLayout>

</RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
