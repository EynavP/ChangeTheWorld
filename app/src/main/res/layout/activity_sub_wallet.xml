<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubWallet"
    android:background="@drawable/currency_page_back">


    <RelativeLayout
        android:id="@+id/top_currency_page"
        android:layout_width="match_parent"
        android:layout_height="210dp">


        <TextView
            android:id="@+id/subwalletName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="113dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="117dp"
            android:fontFamily="@font/comfortaa"
            android:letterSpacing="0.25"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalBalance"
            android:layout_width="147dp"
            android:layout_height="45dp"
            android:layout_below="@+id/subwalletName"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="115dp"
            android:layout_marginTop="59dp"
            android:layout_marginEnd="131dp"

            android:fontFamily="@font/comfortaa"
            android:letterSpacing="0.25"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalBalanceSymbol"
            android:layout_width="38dp"
            android:layout_height="45dp"
            android:layout_below="@+id/subwalletName"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="251dp"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="106dp"
            android:fontFamily="@font/comfortaa"
            android:letterSpacing="0.25"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalBalanceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/totalBalance"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="115dp"
            android:layout_marginTop="103dp"
            android:layout_marginEnd="115dp"
            android:fontFamily="@font/comfortaa"
            android:letterSpacing="0.25"
            android:text="Total Balance"
            android:textAlignment="center"
            android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/DepositTitle"
            android:layout_width="72dp"
            android:layout_height="63dp"
            android:layout_below="@+id/withdrawTitle"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="221dp"
            android:layout_marginTop="-61dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/deposit_icon" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/withdrawTitle"
            android:layout_width="72dp"
            android:layout_height="64dp"
            android:layout_below="@+id/totalBalanceTitle"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="96dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="225dp"
            android:background="@drawable/withdraw_icon" />

        <TextView
            android:id="@+id/withdrawTitleIcon"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/totalBalance"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="88dp"
            android:layout_marginTop="188dp"
            android:layout_marginEnd="222dp"
            android:fontFamily="@font/comfortaa"
            android:letterSpacing="0.25"
            android:text="@string/withdraw"
            android:textAlignment="center"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/depositTitleIcon"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/totalBalance"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="216dp"
            android:layout_marginTop="186dp"
            android:layout_marginEnd="94dp"
            android:fontFamily="@font/comfortaa"
            android:letterSpacing="0.25"
            android:text="@string/deposit"
            android:textAlignment="center"
            android:textSize="9sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_currency_page">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/SubWalletRecycle"
            android:layout_width="wrap_content"
            android:layout_height="563dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="34dp" />


    </RelativeLayout>


</RelativeLayout>
