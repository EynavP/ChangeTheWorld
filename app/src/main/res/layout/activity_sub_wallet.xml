<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubWallet"
    android:background="@drawable/currency_page_back">


    <RelativeLayout
        android:id="@+id/top_currency_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/subwalletName"
            android:layout_width="163dp"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="114dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="116dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:fontFamily="@font/comfortaa"
            android:letterSpacing="0.25"/>


        <Button
            android:id="@+id/withdrawTitle"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="41dp"
            android:layout_marginTop="103dp"
            android:layout_marginEnd="229dp"
            android:text="Withdraw" />

        <Button
            android:id="@+id/DepositTitle"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/withdrawTitle"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="231dp"
            android:layout_marginTop="-46dp"
            android:layout_marginEnd="43dp"
            android:text="Deposit" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_currency_page">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/SubWalletRecycle"
            android:layout_width="wrap_content"
            android:layout_height="563dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="34dp" />


    </RelativeLayout>


</RelativeLayout>
