<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubWallet">


    <ImageView
        android:id="@+id/top_image"
        android:layout_width="wrap_content"
        android:layout_height="245dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="-21dp"
        android:background="@drawable/round_background2" />


    <Button
        android:id="@+id/withdrawTitle"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="134dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="136dp"
        android:text="Withdraw" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_image">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/SubWalletRecycle"
            android:layout_width="319dp"
            android:layout_height="374dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="280dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/moveToWallet"
            android:layout_width="117dp"
            android:layout_height="37dp"
            android:layout_marginStart="243dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="-47dp"
            android:background="@drawable/client_sign_in_button"
            android:text="Wallet" />


    </RelativeLayout>

    <Button
        android:id="@+id/DepositTitle"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/withdrawTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="139dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="135dp"
        android:text="Deposit" />


</RelativeLayout>
