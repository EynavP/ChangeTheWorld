<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubWallet">


    <ImageView
        android:id="@+id/top_image"
        android:layout_width="wrap_content"
        android:layout_height="245dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="-21dp"
        android:background="@drawable/round_background2" />

    <ImageView
        android:id="@+id/depositeClick"
        android:layout_width="68dp"
        android:layout_height="62dp"
        android:layout_below="@+id/top_image"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="255dp"
        android:layout_marginBottom="503dp"
        app:srcCompat="@drawable/deposit" />

    <TextView
        android:id="@+id/DepositTitle"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="78dp"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="242dp"
        android:text="Deposit" />

    <TextView
        android:id="@+id/withdrawTitle"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="235dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="86dp"
        android:text="Withdraw" />

    <ImageView
        android:id="@+id/widthdrawClick"
        android:layout_width="78dp"
        android:layout_height="67dp"
        android:layout_below="@+id/top_image"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="503dp"
        app:srcCompat="@drawable/withdraw" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="100dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle"
            android:layout_width="319dp"
            android:layout_height="374dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="280dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/moveToWallet"
            android:layout_width="117dp"
            android:layout_height="37dp"
            android:layout_marginStart="243dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="-47dp"
            android:background="@drawable/login_button"
            android:text="Wallet" />


    </RelativeLayout>



</RelativeLayout>
