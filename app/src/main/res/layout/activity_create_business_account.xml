<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".CreateBusinessAccount"
            android:background="@color/homePage_bac">

            <RelativeLayout
                android:id="@+id/topPageBusinessRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/circleRegisterClient"
                    android:layout_width="match_parent"
                    android:layout_height="239dp"
                    android:layout_marginTop="-30dp"
                    app:srcCompat="@drawable/register_circles" />

                <TextView
                    android:id="@+id/create_busi"

                    android:layout_width="159dp"
                    android:layout_height="77dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="120dp"
                    android:layout_marginLeft="137dp"
                    android:layout_marginTop="43dp"
                    android:layout_marginEnd="120dp"
                    android:fontFamily="@font/comfortaa"
                    android:text="@string/register"
                    android:textAlignment="center"
                    android:textAppearance="@style/sign_in_title"
                    android:textSize="35sp"
                    app:lineHeight="34sp" />

                <TextView
                    android:id="@+id/create_a_new_business"

                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="126dp"
                    android:layout_marginLeft="168dp"
                    android:layout_marginTop="-28dp"
                    android:layout_marginEnd="126dp"
                    android:fontFamily="@font/comfortaa"
                    android:layout_below="@+id/create_busi"
                    android:text="@string/as_business_title"
                    android:textAlignment="center"
                    android:textAppearance="@style/login_business"
                    app:lineHeight="34sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fieldsBusinessRegister"
                android:layout_width="match_parent"
                android:layout_height="683dp"
                android:layout_below="@id/topPageBusinessRegister">

                <EditText
                    android:id="@+id/enterBusinessName"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_below="@+id/businessName"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="58dp"
                    android:layout_marginLeft="58dp"
                    android:layout_marginTop="-6dp"
                    android:layout_marginEnd="58dp"
                    android:background="@drawable/empty_rectangle"
                    android:inputType="text"
                    android:paddingStart="20dp" />

                <TextView
                    android:id="@+id/businessName"
                    android:layout_width="151dp"
                    android:layout_height="33dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="64dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="201dp"
                    android:fontFamily="@font/comfortaa"
                    android:gravity="top"
                    android:text="@string/businessName"
                    android:textAppearance="@style/username"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/enterMailAddressBusiness"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_below="@+id/enterBusinessName"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="58dp"
                    android:layout_marginLeft="58dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="58dp"
                    android:background="@drawable/empty_rectangle"
                    android:inputType="textEmailAddress"
                    android:paddingStart="20dp" />

                <TextView
                    android:id="@+id/businessAdress"
                    android:layout_width="174dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mailBusiness"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="64dp"
                    android:layout_marginLeft="61dp"
                    android:layout_marginTop="58dp"
                    android:layout_marginEnd="181dp"
                    android:fontFamily="@font/comfortaa"
                    android:gravity="top"
                    android:text="@string/businessAddress"
                    android:textAppearance="@style/username"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/enterAddressBusiness"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_below="@+id/enterMailAddressBusiness"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="58dp"
                    android:layout_marginLeft="58dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="58dp"
                    android:background="@drawable/empty_rectangle"
                    android:inputType="textEmailAddress"
                    android:paddingStart="20dp" />

                <TextView
                    android:id="@+id/mailBusiness"
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/businessName"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="64dp"
                    android:layout_marginLeft="64dp"
                    android:layout_marginTop="49dp"
                    android:layout_marginEnd="204dp"
                    android:fontFamily="@font/comfortaa"
                    android:gravity="top"
                    android:text="@string/mailAddress"
                    android:textAppearance="@style/username"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/enternoBusiness"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_below="@+id/enterAddressBusiness"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="58dp"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="208dp"
                    android:background="@drawable/empty_rectangle"
                    android:inputType="text"
                    android:paddingStart="20dp" />

                <Spinner
                    android:id="@+id/enterBusinessState"
                    android:layout_width="145dp"
                    android:layout_height="55dp"
                    android:layout_below="@+id/enterAddressBusiness"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="213dp"
                    android:layout_marginLeft="215dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="58dp"
                    android:background="@drawable/empty_rectangle"
                    android:paddingStart="20dp"
                    android:prompt="@string/localCurrency"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:id="@+id/businessState"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/businessAdress"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="71dp"
                    android:layout_marginLeft="219dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginEnd="97dp"
                    android:layout_toEndOf="@+id/businessNO"
                    android:fontFamily="@font/comfortaa"
                    android:gravity="top"
                    android:text="@string/State"
                    android:textAppearance="@style/username"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/businessNO"
                    android:layout_width="84dp"
                    android:layout_height="31dp"
                    android:layout_below="@+id/businessAdress"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="64dp"
                    android:layout_marginLeft="59dp"
                    android:layout_marginTop="55dp"
                    android:fontFamily="@font/comfortaa"
                    android:gravity="top"
                    android:text="@string/NO"
                    android:textAppearance="@style/username"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/enterBusinessPhone"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_below="@+id/enternoBusiness"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="58dp"
                    android:layout_marginLeft="61dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="58dp"
                    android:background="@drawable/empty_rectangle"
                    android:inputType="phone"
                    android:paddingStart="20dp" />

                <TextView
                    android:id="@+id/businessPhone"
                    android:layout_width="161dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/businessNO"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="64dp"
                    android:layout_marginLeft="64dp"
                    android:layout_marginTop="47dp"
                    android:layout_marginEnd="161dp"
                    android:fontFamily="@font/comfortaa"
                    android:gravity="top"
                    android:text="@string/phoneNumber"
                    android:textAppearance="@style/username"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/enterBusinessUsername"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_below="@+id/enterBusinessPhone"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="58dp"
                    android:layout_marginLeft="61dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="58dp"
                    android:background="@drawable/empty_rectangle"
                    android:inputType="text"
                    android:paddingStart="20dp" />

                <TextView
                    android:id="@+id/businessUsername"
                    android:layout_width="161dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/businessPhone"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="64dp"
                    android:layout_marginLeft="64dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginEnd="197dp"
                    android:fontFamily="@font/comfortaa"
                    android:gravity="top"
                    android:text="@string/username"
                    android:textAppearance="@style/username"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/enterBusinessPassword"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_below="@+id/enterBusinessUsername"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="58dp"
                    android:layout_marginLeft="61dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="58dp"
                    android:background="@drawable/empty_rectangle"
                    android:inputType="textPassword"
                    android:paddingStart="20dp" />


                <TextView
                    android:id="@+id/businessPassword"
                    android:layout_width="161dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/businessUsername"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="64dp"
                    android:layout_marginLeft="64dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginEnd="155dp"
                    android:fontFamily="@font/comfortaa"
                    android:gravity="top"
                    android:text="@string/password"
                    android:textAppearance="@style/username"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/businessOwnerName"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/businessPassword"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="64dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginEnd="122dp"
                    android:fontFamily="@font/comfortaa"
                    android:gravity="top"
                    android:text="@string/businessOwnerName"
                    android:textAppearance="@style/username"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/enterBusinessOwnerName"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_below="@+id/enterBusinessPassword"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="58dp"
                    android:layout_marginLeft="61dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="58dp"
                    android:background="@drawable/empty_rectangle"
                    android:inputType="text"
                    android:paddingStart="20dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/endBusinessRegister"
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:layout_below="@id/fieldsBusinessRegister"
                android:layout_marginTop="-25dp">

                <TextView
                    android:id="@+id/businessOpenHours"
                    android:layout_width="152dp"
                    android:layout_height="58dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="23dp"
                    android:layout_marginLeft="253dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="5dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:fontFamily="@font/comfortaa"
                    android:paddingStart="38dp"
                    android:paddingTop="15dp"
                    android:text="@string/businessOpenHours"
                    android:textAppearance="@style/forgot_pass"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/businessOwnerId"
                    android:layout_width="152dp"
                    android:layout_height="58dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="42dp"
                    android:layout_marginLeft="71dp"
                    android:layout_marginTop="63dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:fontFamily="@font/comfortaa"
                    android:paddingStart="35dp"
                    android:text="@string/businessOwnerId"
                    android:textAppearance="@style/forgot_pass"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/businessApprovalDoc"
                    android:layout_width="152dp"
                    android:layout_height="58dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="42dp"
                    android:layout_marginLeft="78dp"
                    android:layout_marginTop="3dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:fontFamily="@font/comfortaa"
                    android:paddingStart="35dp"
                    android:text="@string/businessApproval"
                    android:textAppearance="@style/forgot_pass"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/createBusinessAccountButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/businessOwnerId"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="97dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginEnd="95dp"
                    android:background="@drawable/business_sign_in_button"
                    android:fontFamily="@font/comfortaa"
                    android:text="@string/register"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/don_t_have_"
                    android:layout_width="218dp"
                    android:layout_height="29dp"
                    android:layout_below="@+id/createBusinessAccountButton"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="63dp"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="134dp"
                    android:fontFamily="@font/comfortaa"
                    android:gravity="top"
                    android:text="@string/already_hav"
                    android:textAppearance="@style/username"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/moveToLogin"
                    android:layout_width="167dp"
                    android:layout_height="38dp"
                    android:layout_below="@id/createBusinessAccountButton"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="193dp"
                    android:layout_marginLeft="193dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="56dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:fontFamily="@font/comfortaa"
                    android:text="@string/gotoLoginBusiness"
                    android:textAppearance="@style/don_t_have_"
                    android:textColor="@color/businessGreen" />

                <ImageView
                    android:id="@+id/ApprovalDocumentIcon"
                    android:layout_width="50dp"
                    android:layout_height="38dp"
                    android:layout_below="@+id/imageView2"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="48dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginEnd="317dp"
                    app:srcCompat="@drawable/upload_photo" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="41dp"
                    android:layout_height="34dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="123dp"
                    app:srcCompat="@drawable/uploadfile" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="41dp"
                    android:layout_height="34dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="122dp"
                    app:srcCompat="@drawable/calender" />
            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>
</layout>