<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".client_home_page"
    android:fitsSystemWindows="true"
    tools:openDrawer="end"
    android:id="@+id/drawer_menu">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header"
        app:menu="@menu/open_menu"
        android:layout_gravity="start" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/topHomePageClient"
                android:layout_width="match_parent"
                android:layout_height="248dp">

                <View
                    android:id="@+id/topClientHomePage"
                    android:layout_width="match_parent"
                    android:layout_height="305dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="-57dp"
                    android:background="@drawable/home_page_top_client" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="339dp"
                    app:navigationIcon="@drawable/humburger_icon">

                </androidx.appcompat.widget.Toolbar>

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="280dp"
                    android:layout_marginTop="50dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="250dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/profilePhotoCV"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="250dp">

                        <ImageView
                            android:id="@+id/profilePhoto"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_launcher_foreground" />

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/welcome_back"
                    android:layout_width="221dp"
                    android:layout_height="28dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="43dp"
                    android:layout_marginLeft="43dp"
                    android:layout_marginTop="59dp"
                    android:layout_marginEnd="130dp"
                    android:fontFamily="@font/comfortaa"
                    android:gravity="top"
                    android:letterSpacing="0.25"
                    android:text="@string/welcome_back"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/welcome_back"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="51dp"
                    android:layout_marginLeft="51dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="194dp"
                    android:fontFamily="@font/comfortaa"
                    android:gravity="top"
                    android:letterSpacing="0.25"
                    android:text="@string/username"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="416dp"
                    android:layout_height="108dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginEnd="-5dp"
                    app:srcCompat="@drawable/searchline" />

                <EditText
                    android:id="@+id/state"
                    android:layout_width="147dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView6"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="23dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="241dp"
                    android:fontFamily="@font/comfortaa"
                    android:gravity="top"
                    android:hint="@string/State"
                    android:letterSpacing="0.25"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/city"
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/state"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="99dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="239dp"
                    android:fontFamily="@font/comfortaa"
                    android:gravity="top"
                    android:hint="@string/city"
                    android:letterSpacing="0.25"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/street"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView6"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="185dp"
                    android:layout_marginLeft="239dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="92dp"
                    android:fontFamily="@font/comfortaa"
                    android:gravity="top"
                    android:hint="@string/street"
                    android:letterSpacing="0.25"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/no"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/street"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="186dp"
                    android:layout_marginLeft="184dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="155dp"
                    android:fontFamily="@font/comfortaa"
                    android:gravity="top"
                    android:hint="@string/NO"
                    android:letterSpacing="0.25"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/search_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/street"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="334dp"
                    android:layout_marginTop="-17dp"
                    android:layout_marginEnd="18dp"
                    android:background="@null" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="49dp"
                    android:layout_height="42dp"
                    android:layout_alignTop="@+id/imageView6"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="337dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="25dp"
                    app:srcCompat="@android:drawable/ic_menu_search" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ScrollView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="775dp"
                android:paddingTop="100dp">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/SubWalletRecycle"
                    android:layout_width="match_parent"
                    android:layout_height="479dp"
                    android:layout_below="@+id/currenciesRates"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="37dp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/currenciesRates"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="178dp"
                    android:layout_marginTop="115dp"
                    android:layout_marginEnd="185dp" />

                <TextView
                    android:id="@+id/currenciesRates"
                    android:layout_width="270dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="180dp"
                    android:layout_marginEnd="111dp"
                    android:fontFamily="@font/comfortaa"
                    android:letterSpacing="0.25"
                    android:text="@string/currencies_rates"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>