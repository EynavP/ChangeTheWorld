<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BusinessLogin"
        android:background="@color/homePage_bac">

        <RelativeLayout
            android:id="@+id/topPageBusiness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/circles_image"
                android:layout_width="351dp"
                android:layout_height="280dp"
                android:layout_marginStart="-40dp"
                app:srcCompat="@drawable/circles_login" />

            <TextView
                android:id="@+id/sign_in_title"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="124dp"
                android:layout_marginLeft="123dp"
                android:layout_marginTop="176dp"
                android:layout_marginEnd="124dp"
                android:fontFamily="@font/comfortaa"
                android:text="@string/sign_in"
                android:textAlignment="center"
                android:textAppearance="@style/sign_in_title"
                android:textSize="35sp"
                app:lineHeight="34sp" />

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="152dp"
                android:layout_height="198dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="21dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="239dp"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/login_as_business"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_in_title"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="148dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="148dp"
                android:fontFamily="@font/comfortaa"
                android:text="@string/as_business_title"
                android:textAlignment="center"
                android:textAppearance="@style/login_business"
                app:lineHeight="34sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/middlePageBusiness"
            android:layout_width="wrap_content"
            android:layout_height="244dp"
            android:layout_below="@id/topPageBusiness"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp">

            <TextView
                android:id="@+id/username"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="57dp"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="252dp"
                android:fontFamily="@font/comfortaa"
                android:gravity="top"
                android:text="@string/username"
                android:textAppearance="@style/username"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_below="@+id/username"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="53dp"
                android:layout_marginLeft="53dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="53dp"
                android:background="@drawable/empty_rectangle"
                android:inputType="text"
                android:paddingStart="20dp" />

            <TextView
                android:id="@+id/password"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextTextPersonName"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="56dp"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="254dp"
                android:fontFamily="@font/comfortaa"
                android:gravity="top"
                android:text="@string/password"
                android:textAppearance="@style/password"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_below="@+id/password"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="53dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="53dp"
                android:background="@drawable/empty_rectangle"
                android:inputType="textPassword"
                android:paddingStart="20dp" />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/endPageBusiness"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:layout_below="@id/middlePageBusiness"
            android:layout_marginTop="0dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/login"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="99dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="93dp"
                android:background="@drawable/business_sign_in_button"
                android:fontFamily="@font/comfortaa"
                android:text="@string/sign_in"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/don_t_have_"
                android:layout_width="173dp"
                android:layout_height="33dp"
                android:layout_below="@+id/login"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="59dp"
                android:layout_marginLeft="59dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="-20dp"
                android:fontFamily="@font/comfortaa"
                android:text="@string/don_t_have_"
                android:textAlignment="textEnd"
                android:textAppearance="@style/sign_in_title"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/client_user_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/don_t_have_"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="129dp"
                android:layout_marginLeft="129dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="-29dp"
                android:layout_marginBottom="47dp"
                android:fontFamily="@font/comfortaa"
                android:text="@string/client_user_title"
                android:textAlignment="textEnd"
                android:textAppearance="@style/sign_in_title"
                android:textSize="12sp" />

            <Button
                android:id="@+id/gotoLoginBusiness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/createBusinessAccount"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="192dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="95dp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="@font/comfortaa"
                android:text="@string/gotoLoginBusiness"
                android:textAppearance="@style/don_t_have_"
                android:textColor="@color/businessGreen" />

            <Button
                android:id="@+id/createBusinessAccount"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="203dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="56dp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="@font/comfortaa"
                android:text="@string/register_now"
                android:textAppearance="@style/forgot_pass"
                android:textColor="@color/businessGreen"
                android:textSize="12sp" />

        </RelativeLayout>


    </RelativeLayout>
</layout>


