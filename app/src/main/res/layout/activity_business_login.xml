<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BusinessLogin"

        >
        <!-- Logo image -->


        <!-- Welcome Back -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="284dp"
            android:layout_height="264dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="56dp"

            android:layout_marginTop="-18dp"
            android:layout_marginEnd="53dp"
            app:srcCompat="@drawable/logo" />

        <!-- Username -->

        <TextView
            android:id="@+id/welcome_bac"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="198dp"
            android:layout_marginEnd="88dp"
            android:fontFamily="sans-serif-black"
            android:gravity="top"
            android:text="@string/sign_in"
            android:textAppearance="@style/sign_in_title"
            app:lineHeight="34sp" />


        <!-- enter UserName -->

        <TextView
            android:id="@+id/login_as_client"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome_bac"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="48dp"
            android:fontFamily="sans-serif-black"
            android:gravity="top"
            android:text="@string/login_business"
            android:textAppearance="@style/login_client"
            app:lineHeight="34sp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="51dp"
            android:layout_height="13dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="73dp"
            android:layout_marginTop="292dp"
            android:gravity="top"
            android:text="@string/username"
            android:textAppearance="@style/username" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="274dp"
            android:layout_height="58dp"
            android:layout_below="@+id/welcome_bac"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="71dp"
            android:layout_marginEnd="57dp"
            android:background="@drawable/empty_rectangle"
            android:hint="@string/username"
            android:inputType="text"
            android:paddingStart="50dp"
            android:textColorHint="#11000000" />

        <!-- Password -->
        <TextView
            android:id="@+id/password"
            android:layout_width="51dp"
            android:layout_height="13dp"
            android:layout_below="@+id/username"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="73dp"
            android:layout_marginTop="79dp"
            android:gravity="top"
            android:text="@string/password"
            android:textAppearance="@style/password" />

        <!-- enter Password -->

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="274dp"
            android:layout_height="58dp"
            android:layout_below="@+id/editTextTextPersonName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="59dp"
            android:background="@drawable/empty_rectangle"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingStart="50dp"
            android:textColorHint="#11000000" />

        <!-- Forgot Password button -->

        <!-- login button -->


        <!-- Donâ€™t have account? -->

        <!-- Create new account button -->

        <!-- username icon -->
        <Button
            android:id="@+id/forgotPass"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextTextPassword"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="20dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/forgot_pass"
            android:textAppearance="@style/forgot_pass"
            android:textColor="@color/appBlueColor" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextTextPassword"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="96dp"
            android:layout_marginTop="79dp"
            android:layout_marginEnd="97dp"
            android:background="@drawable/sign_in_button"
            android:text="@string/sign_in"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/don_t_have_"
            android:layout_width="121dp"
            android:layout_height="27dp"
            android:layout_below="@+id/login"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="61dp"
            android:layout_marginTop="28dp"
            android:gravity="top"
            android:text="@string/don_t_have_"
            android:textAppearance="@style/don_t_have_" />

        <Button
            android:id="@+id/gotoLoginBusiness"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/don_t_have_"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="11dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/gotoLoginClient"
            android:textAppearance="@style/don_t_have_"
            android:textColor="@color/appBlueColor" />

        <Button
            android:id="@+id/createBusinessAccount"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="158dp"
            android:layout_marginTop="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/create_new_business"
            android:textAppearance="@style/forgot_pass"
            android:textColor="@color/appBlueColor" />

        <ImageView
            android:id="@+id/usernameIcon"
            android:layout_width="38dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/username"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="287dp"
            app:srcCompat="@drawable/usericon" />

        <!-- password icon -->
        <ImageView
            android:id="@+id/passwordIcon"
            android:layout_width="38dp"
            android:layout_height="35dp"
            android:layout_below="@+id/usernameIcon"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="62dp"
            android:layout_marginEnd="288dp"
            app:srcCompat="@drawable/passwordicon" />


    </RelativeLayout>
</layout>


