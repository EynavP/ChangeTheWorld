<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusinessHomePage"
    android:fitsSystemWindows="true"
    tools:openDrawer="end"
    android:id="@+id/drawer_menu_business">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header_business"
        app:menu="@menu/open_menu_businees"
        android:layout_gravity="start" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/BusinessHomePageTop"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/top_image"
                android:layout_width="match_parent"
                android:layout_height="258dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="-57dp"
                android:background="@drawable/business_home_page_top"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="339dp"
                app:navigationIcon="@drawable/humburger_icon">

            </androidx.appcompat.widget.Toolbar>

            <TextView
                android:id="@+id/welcome_back"
                android:layout_width="221dp"
                android:layout_height="28dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="43dp"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="59dp"
                android:layout_marginEnd="130dp"
                android:fontFamily="@font/comfortaa"
                android:gravity="top"
                android:letterSpacing="0.25"
                android:text="@string/welcome_back"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/username"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/welcome_back"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="62dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="-2dp"
                android:layout_marginEnd="142dp"
                android:letterSpacing="0.25"
                android:fontFamily="@font/comfortaa"
                android:text="@string/username"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <View
                android:id="@+id/searchLine"
                android:layout_width="270dp"
                android:layout_height="38dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="62dp"
                android:layout_marginLeft="62dp"
                android:layout_marginTop="133dp"
                android:layout_marginEnd="62dp"
                android:background="@drawable/searchline" />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_bar"
                android:layout_width="270dp"
                android:layout_height="38dp"
                android:layout_below="@+id/username"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="62dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="63dp"
                android:layout_marginBottom="10dp" />


        </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_below="@id/BusinessHomePageTop"
                android:paddingTop="50dp">

                <View
                    android:id="@+id/ratePlacer"
                    android:layout_width="159dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/datePlacer"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/small_rectangle" />

                <View
                    android:id="@+id/datePlacer"
                    android:layout_width="159dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="27dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/small_rectangle" />

                <TextView
                    android:id="@+id/dayDate"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/datePlacer"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="37dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="59dp"
                    android:text="Sunday"
                    android:fontFamily="@font/comfortaa"
                    android:textAppearance="@style/littleTitle"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/todayDate"
                    android:layout_width="139dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dayDate"
                    android:layout_alignEnd="@+id/datePlacer"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="7dp"
                    android:fontFamily="@font/comfortaa"
                    android:letterSpacing="0.25"
                    android:text="03/04/2022"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/ordersFields"
                    android:layout_width="159dp"
                    android:layout_height="142dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="204dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/medium_rectangle" />

                <View
                    android:id="@+id/newRatesFields"
                    android:layout_width="159dp"
                    android:layout_height="142dp"
                    android:layout_below="@id/ordersFields"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="204dp"
                    android:layout_marginTop="180dp"
                    android:background="@drawable/medium_rectangle" />

                <View
                    android:id="@+id/localCurrencyFields"
                    android:layout_width="159dp"
                    android:layout_height="142dp"
                    android:layout_below="@id/ratePlacer"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="180dp"
                    android:background="@drawable/medium_rectangle" />

            </RelativeLayout>



        </RelativeLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>