<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderPage"
    android:background="@color/homePage_bac">

    <RelativeLayout
        android:id="@+id/topPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp">

        <TextView
            android:id="@+id/new_order_title"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="98dp"
            android:layout_marginLeft="98dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="99dp"
            android:fontFamily="@font/comfortaa"
            android:text="@string/new_order"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/middlePage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topPage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="30dp">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="653dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="204dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/order_circles" />


        <TextView
            android:id="@+id/payment_method_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/comfortaa"
            android:text="@string/payment_method"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.106"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cash_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="39dp"
            android:layout_toEndOf="@+id/payment_method_title"
            android:background="@drawable/payment_method_btn"
            android:text="@string/cash"
            app:layout_constraintStart_toEndOf="@+id/payment_method_title"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/wallet_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="39dp"
            android:layout_toEndOf="@+id/cash_btn"
            android:background="@drawable/payment_method_btn"
            android:text="@string/wallet"
            app:layout_constraintStart_toEndOf="@+id/cash_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/from_title"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/payment_method_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="122dp"
            android:fontFamily="@font/comfortaa"
            android:text="@string/from"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.078"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/from_value"
            android:layout_width="122dp"
            android:layout_height="47dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="104dp"
            android:layout_marginTop="111dp"
            android:layout_toEndOf="@+id/from_title"
            android:background="@drawable/payment_method_btn"
            android:fontFamily="@font/comfortaa"
            android:text="@string/payment_method"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.033"
            app:layout_constraintStart_toEndOf="@+id/from_title"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/to_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/from_title"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="239dp"
            android:layout_marginTop="-22dp"
            android:layout_toEndOf="@+id/from_value"
            android:fontFamily="@font/comfortaa"
            android:text="@string/to"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.097"
            app:layout_constraintStart_toEndOf="@+id/from_value"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/to_value"
            android:layout_width="122dp"
            android:layout_height="47dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="263dp"
            android:layout_marginTop="111dp"
            android:layout_toEndOf="@+id/to_title"
            android:background="@drawable/payment_method_btn"
            android:fontFamily="@font/comfortaa"
            android:text="@string/payment_method"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.318"
            app:layout_constraintStart_toEndOf="@+id/to_title"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/amount_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/from_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="31dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/comfortaa"
            android:text="@string/amount"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.098"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/amount_value"
            android:layout_width="207dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="183dp"
            android:layout_toEndOf="@+id/amount_title"
            android:background="@drawable/payment_method_btn"
            android:fontFamily="@font/comfortaa"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.193"
            app:layout_constraintStart_toEndOf="@+id/amount_title"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/receive_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amount_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="53dp"
            android:fontFamily="@font/comfortaa"
            android:text="@string/receive"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.095"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amount_title" />


        <TextView
            android:id="@+id/receive_value"
            android:layout_width="205dp"
            android:layout_height="46dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="132dp"
            android:layout_marginTop="262dp"
            android:layout_toEndOf="@+id/receive_title"
            android:background="@drawable/payment_method_btn"
            android:fontFamily="@font/comfortaa"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.222"
            app:layout_constraintStart_toEndOf="@+id/receive_title"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pickup_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/receive_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="53dp"
            android:fontFamily="@font/comfortaa"
            android:text="@string/pickup_date"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.095"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/receive_title" />

        <EditText
            android:id="@+id/pickup_date_value"
            android:layout_width="186dp"
            android:layout_height="45dp"
            android:layout_below="@+id/receive_value"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="146dp"
            android:layout_marginTop="31dp"
            android:layout_toEndOf="@+id/pickup_date_title"
            android:background="@drawable/payment_method_btn"
            android:focusable="false"
            android:fontFamily="@font/comfortaa"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.125"
            app:layout_constraintStart_toEndOf="@+id/pickup_date_title"
            app:layout_constraintTop_toBottomOf="@+id/receive_value" />

        <TextView
            android:id="@+id/pickup_from_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pickup_date_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/comfortaa"
            android:text="@string/pickup_from"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.093"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pickup_date_title" />


        <TextView
            android:id="@+id/pickup_from_value"
            android:layout_width="247dp"
            android:layout_height="54dp"
            android:layout_below="@+id/pickup_date_value"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="139dp"
            android:layout_marginTop="29dp"
            android:layout_toEndOf="@+id/pickup_from_title"
            android:fontFamily="@font/comfortaa"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.125"
            app:layout_constraintStart_toEndOf="@+id/pickup_date_title"
            app:layout_constraintTop_toBottomOf="@+id/pickup_date_value" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit_btn"
            android:layout_width="149dp"
            android:layout_height="50dp"
            android:layout_below="@+id/pickup_from_value"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="144dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="118dp"
            android:background="@drawable/payment_method_btn"
            android:text="@string/submit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.112" />
    </RelativeLayout>


</RelativeLayout>