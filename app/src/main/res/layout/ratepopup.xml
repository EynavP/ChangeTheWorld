<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/homePage_bac">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelRate"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="347dp"
            android:layout_marginEnd="11dp"
            android:text="X"
            android:textSize="28sp"
            android:background="?android:attr/selectableItemBackground">

        </androidx.appcompat.widget.AppCompatButton>

        <ImageView
            android:id="@+id/circles_image"
            android:layout_width="351dp"
            android:layout_height="280dp"
            android:layout_marginStart="-40dp"
            app:srcCompat="@drawable/circles_login" />

        <TextView
            android:id="@+id/TvRate"
            android:layout_width="396dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ratingBar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="236dp"
            android:gravity="center"
            android:text="@string/please_rate_business"
            android:textSize="30sp">

        </TextView>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="88dp"
            android:layout_marginEnd="88dp"
            android:layout_marginBottom="407dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BtnSubmitRate"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TvRate"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="119dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="120dp"
            android:text="@string/submit"
            android:textSize="30sp">

        </androidx.appcompat.widget.AppCompatButton>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>